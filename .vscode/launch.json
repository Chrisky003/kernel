    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/kernel",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "qemu",
                    "value": "qemu-system-i386"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            //"preLaunchTask": "Update",
            "setupCommands": [
                // {
                //     "description": "Enable pretty-printing for gdb",
                //     "text": "-enable-pretty-printing",
                //     "ignoreFailures": true
                // },
                {
                    "description": "启动qemu",
                    "text": "shell qemu-system-i386 -S -s -hda ~/Desktop/floppy.img",
                    "ignoreFailures": false
                },
                {
                    "description": "连接至qemu",
                    "text": "target remote :1234",
                    "ignoreFailures": false
                },
                {
                    "description": "在start处设置断点",
                    "text": "break start",
                    "ignoreFailures": false
                },
                {
                    "text": "c",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}